@model ConsoleAppProject.App01.DistanceConverter
@using ConsoleAppProject.App01
@{
    ViewData["Title"] = "V.A Distance Converter";
}

<header class=" jumbotron">
    <h1>Distance Converter</h1>
    <h2>By Vincent Assolutissimamente</h2>
    <p>
        This app will take one measurment and convert it into another
    </p>
</header>
<body>

    <form method="post">
        Convert :
        <input type="number" id="FromValue" placeholder="From value" asp-for="@Model.FromDistance" />

        <select asp-for="@Model.FromUnit">
            <option value="feet">feet</option>
            <option value="meters">meters</option>
            <option value="miles">miles</option>
        </select>

        <label for="unit-select"> into  </label>
        <select asp-for="@Model.ToUnit">
            <option value="feet">feet</option>
            <option value="meters">meters</option>
            <option value="miles">miles</option>
        </select>
         
        <input type="text" placeholder="To Distance" asp-for="@Model.ToDistance" value="@Model.ToDistance.ToString("0.00")" />

        <p>
            <button class=" btn btn-success" input type="submit">Calculate</button>
        </p>
    </form>

</body>


