@model IEnumerable<WebApplication1.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<header class="text-center jumbotron justify-content-center">
    <h1>Listing of Students</h1>
    <h2>By Vincent Assolutissimamente</h2>
</header>

<p>
    <a class="btn btn-success" asp-action="Create">Add New Student</a>
    <a class="btn btn-primary" asp-action="Analyse">Analyse</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.StudentID">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.StudentID">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.StudentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
